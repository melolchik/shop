<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_white"
              android:orientation="vertical"
              android:padding="@dimen/padding_dialog"
              >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.melolchik.common.ui.views.customfont.CustomFontTextView
            android:id="@+id/txt_product_name"
            style="@style/Shop.TextView.Purchase.Product.Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/products_total_label"/>

        <com.melolchik.common.ui.views.customfont.CustomFontTextView
            android:id="@+id/txt_product_price"
            style="@style/Shop.TextView.Purchase.Product.Cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/padding_dialog"
        >

        <com.melolchik.common.ui.views.customfont.CustomFontTextView
            android:id="@+id/txt_cost_one"
            style="@style/Shop.TextView.Purchase.Product.Cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/products_total_label"/>

        <com.melolchik.common.ui.views.customfont.CustomFontTextView
            android:id="@+id/txt_cost_two"
            style="@style/Shop.TextView.Purchase.Product.Cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>